{
  "name": "@ignitial/iio-services",
  "version": "2.1.0",
  "description": "Ignitial.io microservices",
  "main": "index.js",
  "repository": "git@github.com:ignitialio/iio-services.git",
  "author": "Victor Andritoiu <devandrito@gmail.com>",
  "keywords": [
    "microservice",
    "service discovery",
    "api gateway",
    "serverless",
    "streaming",
    "data pipes",
    "micro-service",
    "access control"
  ],
  "license": "MIT",
  "scripts": {
    "lint": "eslint --ext .js lib",
    "config:build": "test/utils/build.sh",
    "config:populate": "docker-compose up -d redis && node test/utils/populate.js && docker-compose stop redis && docker-compose rm -f redis",
    "test:accesscontrol": "docker-compose up -d redis && node test/test_accesscontrol.js && docker-compose stop redis && docker-compose rm -f redis",
    "test:connectors": "docker-compose up -d redis && node test/test_connectors.js",
    "test:service": "docker-compose up -d redis && export DEBUG=-removethis-iios:* && node test/test_service.js && docker-compose stop redis && docker-compose rm -f redis",
    "test:services": "test/test_services.sh",
    "test:services:http": "test/test_services_http.sh",
    "test:streams": "test/test_streams.sh",
    "test:services:bson": "test/test_bson.sh"
  },
  "dependencies": {
    "accesscontrol": "^2.2.1",
    "body-parser": "^1.18.3",
    "bson": "^4.0.2",
    "connect": "^3.6.6",
    "connect-rest": "^3.0.29",
    "cpu-stats": "^1.0.0",
    "debug": "^4.1.1",
    "got": "^9.6.0",
    "ioredis": "^4.9.0",
    "serve-static": "^1.13.2"
  },
  "devDependencies": {
    "chalk": "^2.4.2",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "should": "^13.2.3"
  }
}
